[colors]
background = #282828
background-alt = #282828
foreground = #E8E8E8
foreground-alt = #E8E8E8

[bar/base]
dpi = 280
width = 100%
height = 50
radius = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
border-size = 0

font-0 = Hack:pixelsize=10;6
font-1 = FontAwesome:fontformat=truetype:pixelsize=10;6

modules-left = i3
modules-center =
modules-right = wlan eth date battery

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-scale = 1.0
tray-maxsize = 32

[bar/int]
monitor = eDP-1-1
inherit = bar/base

[bar/ext]
monitor = HDMI-1-1
inherit = bar/base

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #282a36
label-mode-background = #F7CA88

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = #6272a4
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = #585858

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = #AB4642
label-urgent-padding = 1

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
label-connected-padding = 1
label-connected-background = #bd93f9
label-connected-foreground = #282a36
label-connected =  %essid% %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${self.format-connected-foreground}

[module/eth]
type = internal/network
interface = virbr0-nic
interval = 3.0

format-connected-background = #bd93f9
format-connected-foreground = #282a36
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = " %d/%m/%Y"
date-alt = " %d/%m/%Y"

time = %I:%M %P
time-alt = %I:%M %P

format-prefix = 
format-foreground = #f8f8f2
format-background = #6272a4
format-padding = 1

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-background = #F7CA88
format-charging-foreground = #282a36
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = #F7CA88
format-discharging-foreground = #282a36
format-discharging-padding = 1

format-full-prefix = ""
format-full-background = #A1B56C
format-full-foreground = #282a36
format-full-padding = 1

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 750

