primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/ext]
monitor = HDMI1
dpi = ${xrdb:Xft.dpi:280}
width = 100%
height = 55
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

